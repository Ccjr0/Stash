# zathurarc

## --- Settings
set font "JetBrainsMonoNL NF 10"
set statusbar-h padding 0
set statusbar-v padding 0
set page-padding 0
set window-title-home-tilde true
set statusbar-home-tilde true
set selection-clipboard clipboard
set adjust-open width
set guioptions ""

## --- Open document in fit-width mode by default
set adjust-open "best-fit"

## --- Recolor book content's color
set recolor                     true
set recolor-lightcolor          "#1e1e20" # base02
set recolor-darkcolor           "#bebec0" # base1
set recolor-keephue             true      # keep original color

## --- Keymaps
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map <C-Tab> toggle_statusbar

map u scroll half-up
map d scroll half-down
map H scroll full-up
map L scroll full-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map _ zoom out
map i recolor

## --- Colors
## Light/Default mode settings:
set notification-error-bg       "#f2777a" # Red
set notification-error-fg       "#bebec0" # Foreground
set notification-warning-bg     "#ffcc66" # Orange
set notification-warning-fg     "#323234" # Selection
set notification-bg             "#1e1e20" # Background
set notification-fg             "#bebec0" # Foreground

set completion-bg               "#1e1e20" # Background
set completion-fg               "#6e6e70" # Comment
set completion-group-bg         "#1e1e20" # Background
set completion-group-fg         "#6e6e70" # Comment
set completion-highlight-bg     "#323234" # Selection
set completion-highlight-fg     "#bebec0" # Foreground

set index-bg                    "#1e1e20" # Background
set index-fg                    "#bebec0" # Foreground
set index-active-bg             "#323234" # Current Line
set index-active-fg             "#bebec0" # Foreground

set inputbar-bg                 "#1e1e20" # Background
set inputbar-fg                 "#bebec0" # Foreground
set statusbar-bg                "#1e1e20" # Background
set statusbar-fg                "#bebec0" # Foreground

set highlight-color             "#99cc99" # Orange
set highlight-active-color      "#ffcc66" # Pink

set default-bg                  "#1e1e20" # Background
set default-fg                  "#bebec0" # Foreground

set render-loading              true
set render-loading-fg           "#1e1e20" # Background
set render-loading-bg           "#bebec0" # Foreground

## Recolor mode settings
set recolor-lightcolor          "#1e1e20" # Background
set recolor-darkcolor           "#bebec0" # Foreground
